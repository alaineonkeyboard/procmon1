<!DOCTYPE html>
<html>
<head>
  <title>Procmonitor</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>

</head>
<body>
	

	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header navbar-brand"><%= link_to 'ACME MONITORING TOOLS', dashboard_index_path %>
			</div>
			<ul class="nav navbar-nav">
				<% if session[:user_id] %>
			  <li class="active"><%= link_to 'Dashboard', dashboard_index_path %></li>
			  <li><%= link_to 'Reports', reports_index_path %></li>
			  <li><%= link_to 'Schedule', dashboard_index_path %></li>
				<li style="text-align:right"><div >Welcome <%= session[:user_name] %> !!!
					<%= button_to 'Logout', logout_path, method: :delete %>
				</div></li>
				<% end %>
			</ul>
		</div>
	</nav>



	<div class="container-fluid">
		<%= yield %>

	</div>

</body>
</html>